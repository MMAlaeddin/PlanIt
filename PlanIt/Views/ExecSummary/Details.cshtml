@{
  Layout = "_Layout";
}

@using PlanIt.Models;
@model PlanIt.Models.ExecSummary;

<h2>Summary Details</h2>
<hr />

@if(@Model.BusProposals.Count == 0)
{
  <p>This summary does not contain any proposal</p>
}
else
{
  <h4>BusProposals the category contains:</h4>
  <ul>
  @foreach(var join in Model.BusProposals)
  {
    <li>@join.Busproposal.BusProposalTitle</li>
  }
  </ul>
}

