@{
  Layout = "_Layout";
}

@using PlanIt.Models;
@model List<PlanIt.Models.ExecSummary>;

<div class="jumbotron">
<h1>My Summaries</h1>
</div>
@if(@Model.Count == 0)
{
  <h3>No Summaries have been added yet! Sorry.</h3>
}

@foreach (ExecSummary execSummary in Model)
{
  <ul>@Html.ActionLink($"{execSummary.ExecSummaryTitle}", "Details", new { id = execSummary.ExecSummaryId })</ul>
}

<p><button type="submit" class="btn btn-warning">@Html.ActionLink("Add A New Summary", "Create")</button></p>
<p><button type="submit" class="btn btn-warning">@Html.ActionLink("Home", "Index", "Home")</button></p> 
