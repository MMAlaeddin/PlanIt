@{
  Layout = "_Layout";
}

@using PlanIt.Models;
@model List<PlanIt.Models.ExecSummary>;

<h1>My Summaries</h1>

@if(@Model.Count == 0)
{
  <h3>No Summaries have been added yet! Sorry.</h3>
}

@foreach (ExecSummary execSummary in Model)
{
  <button><ul>@Html.ActionLink($"{execSummary.ExecSummaryTitle}", "Details", new { id = execSummary.ExecSummaryId })</ul></button>
}

<p>@Html.ActionLink("Add A New Summary", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p> 
